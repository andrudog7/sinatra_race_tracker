<h1 style="font-variant: small-caps;"><%=current_user.name%>'s <%=@distance%>s:</h1>
<h3>Total Races: <%=current_user.races_by_distance(@distance).count%></h3>
<p class="new-race-button"><a href="/races/new">Add a New <%=@distance%></a></p>
<table class="distance-table" style="width:100%">
  <thead>
    <tr>
        <th></th>
        <th>Name</th>
        <th>Date</th>
        <th>Location</th>
        <th>Distance</th>
        <th>Finish Time</th>
        <th>Pace</th>
        <th>Edit/Delete</th>
    </tr>
  </thead>
    <tbody>
        <tr><%count = 0%>
    <%current_user.sort_by_finish_time(@distance).each do |race|%>
        
            <td><%=count += 1%>.</td>
            <td><a href="/races/<%=race.slug%>/<%=race.id%>/show"><%=race.name%></td>
            <td><%=race.format_date%></td>
            <td><%=race.location%></td>
            <td><%=race.distance%></td>
            <td><%=race.finish_time%></td>
            <td><%=race.pace%></td>
            <td><a href="/races/<%=race.slug%>/<%=race.id%>/edit">Edit</a></td>
        </tr>     
        <%end%>
    </tbody>
</table>
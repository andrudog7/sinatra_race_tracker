<h1 style="font-variant: small-caps;"><%=current_user.name%>'s Races:</h1>
<p class="new-race-button"><a href="/races/new">Add a New Race</a></p>
<h3>Total Races: <%=current_user.races.count%></h3>
<table class="distance-table" style="width:100%" border ="1px">
  <thead>
    <tr>
        <th></th>
        <th>Name</th>
        <th>Date</th>
        <th>Location</th>
        <th>Distance</th>
        <th>Finish Time</th>
        <th>Pace</th>
        <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    <tr>
        <%count = 0%>
        <%current_user.races.all.sort_by{|race|race.finish_time}.each do |race|%>
            <td><%=count += 1%>.</td>
            <td><a href="/races/<%=race.slug%>/<%=race.id%>/show"><%=race.name%></td>
            <td><%=race.format_date%></td>
            <td><%=race.location%></td>
            <td><%=race.distance%></td>
            <td><%=race.finish_time%></td>
            <td><%=race.pace%></td>
            <td><a href="/races/<%=race.slug%>/<%=race.id%>/edit">Edit</a></td>
        </tr>
        <%end%>
    </tbody>
</table>
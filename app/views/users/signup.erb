<h2>Sign up below to join Race Tracker!</h2>
<div style="color:red">
<%if flash[:email]%>
    <%=flash[:email]%>
<%elsif flash[:username]%>
    <%=flash[:username]%>
<%end%>
</div>
<p><form action="/signup" method="POST">
    <label for="name">Name:</label>
        <input type = "text" name = "name" maxlength="30"><br>
    <label for="username">Username:</label>
        <input type = "text" name = "username" maxlength="20"><br>
    <label for="email">Email:</label>
        <input type="email" name = "email" maxlength="30"><br>
    <label for="password">Create Password:</label>
        <input type="password" name="password" maxlength="15"/><br>
        <i>(15 character max)</i><br><br>
    <input class="delete" type="submit" value = "Sign Up!">
</form>
</p>
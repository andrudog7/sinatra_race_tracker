  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>RaceTracker</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
    <div class="wrapper">
    <div><img src="/images/racetracker.png" width="110" height="70" alt="Race Tracker Logo" style="float:left"></div>
    <div id="link_bar">
        <%if logged_in?%>
        <a href='/races/new'>Create a New Race!</a>
        <a href='/users/<%=current_user.slug%>'>Profile Page</a>
        <a href="/logout">Logout</a>
        <%else%>
        <a href='/signup'>Signup</a>
        <a href="/login">Login</a>
        <%end%>
      </div>
      <style>
        #link_bar {float: left}
        #link_bar a { padding:10px; font-weight:bold;}
        #link_bar a:link { color:#000000; background-color: #8dcaff;}
        #link_bar a:visited { color:#000000; background-color: #8dcaff; }
        #link_bar a:hover { color:#ffffff; background-color:#1761a0; }
        #link_bar a:active { color:#f0f0f0; background-color:#ff9e0e; }
      </style>  <br><br><br><br>

        <%= yield %>

      <footer class="branding">
        <br><small>&copy; 2020 <strong>RaceTracker</strong></small>
      </footer>
    </div>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>

<h1><%=@race.name%> Statistics:</h1>

<table class="distance-table" style="width:100%" border ="1px">
  <thead>
    <tr>
        <th>Finisher Name</th>
        <th>Date</th>
        <th>Location</th>
        <th>Distance</th>
        <th>Finish Time</th>
        <th>Pace</th>
        <th>Edit/Delete</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%=current_user.name%></td>
      <td><%=@race.format_date%></td>
      <td><%=@race.location%></td>
      <td><%=@race.distance%></td>
      <td><%=@race.finish_time%></td>
      <td><%=@race.pace%></td>
      <td><a href="/races/<%=@race.slug%>/<%=@race.id%>/edit">Edit</a></td>
    </tr>
    </tbody>
</table>
<p class="new-race-button"><a href="/races/<%=@race.slug_distance%>">All <%=@race.distance%>s</a></p>